<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ADRIFT.Runner.Controls"
             x:Class="ADRIFT.Runner.Controls.MapViewerControl"
             x:Name="this">

    <Border StrokeShape="RoundRectangle 8"
            Stroke="{StaticResource Gray300}"
            StrokeThickness="2"
            BackgroundColor="{StaticResource Gray950}">

        <Grid RowDefinitions="Auto,*,Auto">

            <!-- Header with Title and Refresh Button -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="10"
                  BackgroundColor="{StaticResource Gray900}">
                <Label Grid.Column="0"
                       Text="Adventure Map"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"/>
                <Button Grid.Column="1"
                        Text="↻"
                        FontSize="18"
                        Clicked="OnRefreshClicked"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        WidthRequest="40"
                        HeightRequest="40"
                        ToolTipProperties.Text="Refresh map"/>
            </Grid>

            <!-- Map Display -->
            <controls:MapView Grid.Row="1"
                             x:Name="MapDisplay"
                             HeightRequest="400"
                             BackgroundColor="{StaticResource Gray950}"/>

            <!-- Footer with Location Info and Help -->
            <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Padding="10"
                  BackgroundColor="{StaticResource Gray900}">
                <Label Grid.Column="0"
                       x:Name="LocationLabel"
                       Text="Tap a connected location to navigate"
                       FontSize="12"
                       TextColor="{StaticResource Gray400}"
                       VerticalOptions="Center"/>
                <Label Grid.Column="1"
                       Text="● Current Location"
                       FontSize="11"
                       TextColor="{StaticResource Gray400}"
                       VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="●" TextColor="#4CAF50" FontSize="14"/>
                            <Span Text=" Current " TextColor="White"/>
                            <Span Text="●" TextColor="#2196F3" FontSize="14"/>
                            <Span Text=" Other" TextColor="White"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>

        </Grid>

    </Border>

</ContentView>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADRIFT.Runner.Pages.GamePage"
             Title="ADRIFT Runner">

    <Grid RowDefinitions="*,Auto" Padding="10">

        <!-- Output area -->
        <ScrollView x:Name="OutputScroll" Grid.Row="0">
            <VerticalStackLayout x:Name="OutputStack" Spacing="10" Padding="10">
                <Label x:Name="OutputLabel"
                       Text=""
                       FontFamily="Courier New"
                       FontSize="14"
                       TextColor="{DynamicResource PrimaryTextColor}"
                       LineBreakMode="WordWrap" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- Input area -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Padding="10" ColumnSpacing="10">
            <Entry x:Name="CommandEntry"
                   Grid.Column="0"
                   Placeholder="Enter command..."
                   FontFamily="Courier New"
                   FontSize="14"
                   Completed="OnCommandEntered"
                   ReturnCommand="{Binding SubmitCommandCommand}" />

            <Button Grid.Column="1"
                    Text="Send"
                    Clicked="OnCommandEntered"
                    WidthRequest="80" />
        </Grid>

    </Grid>

</ContentPage>

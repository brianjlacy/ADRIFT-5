<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADRIFT.Runner.Pages.AboutPage"
             Title="About"
             Shell.NavBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- App Logo / Icon -->
            <Frame BackgroundColor="{StaticResource ADRIFTPrimary}"
                   Padding="20" CornerRadius="50"
                   WidthRequest="100" HeightRequest="100"
                   HorizontalOptions="Center"
                   Margin="0,10">
                <Label Text="ðŸŽ®" FontSize="48" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <!-- App Name and Version -->
            <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                <Label Text="ADRIFT Runner" FontSize="24" FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                <Label x:Name="VersionLabel" Text="Version 1.0.0"
                       FontSize="14" TextColor="{StaticResource Gray600}"
                       HorizontalOptions="Center"/>
                <Label Text=".NET MAUI Edition" FontSize="12"
                       TextColor="{StaticResource Gray500}"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Adventure Info Section -->
            <Frame BorderColor="{StaticResource ADRIFTPrimary}" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Current Adventure" FontSize="18" FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto"
                          ColumnSpacing="10" RowSpacing="5">
                        <Label Grid.Row="0" Grid.Column="0" Text="Title:" FontAttributes="Bold" FontSize="12"/>
                        <Label Grid.Row="0" Grid.Column="1" x:Name="AdventureTitleLabel"
                               Text="No adventure loaded" FontSize="12"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Author:" FontAttributes="Bold" FontSize="12"/>
                        <Label Grid.Row="1" Grid.Column="1" x:Name="AdventureAuthorLabel"
                               Text="-" FontSize="12"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Version:" FontAttributes="Bold" FontSize="12"/>
                        <Label Grid.Row="2" Grid.Column="1" x:Name="AdventureVersionLabel"
                               Text="-" FontSize="12"/>

                        <Label Grid.Row="3" Grid.Column="0" Text="Genre:" FontAttributes="Bold" FontSize="12"/>
                        <Label Grid.Row="3" Grid.Column="1" x:Name="AdventureGenreLabel"
                               Text="-" FontSize="12"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- About ADRIFT -->
            <Frame BorderColor="{StaticResource ADRIFTPrimary}" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="About ADRIFT" FontSize="18" FontAttributes="Bold"/>
                    <Label FontSize="12" LineBreakMode="WordWrap">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="ADRIFT (Adventure Development &amp; Runner - Interactive Fiction Toolkit) is a comprehensive system for creating and playing interactive fiction adventures.&#10;&#10;"/>
                                <Span Text="This .NET MAUI edition brings ADRIFT to modern mobile and desktop platforms with a touch-friendly interface."/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Frame>

            <!-- Credits -->
            <Frame BorderColor="{StaticResource ADRIFTPrimary}" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Credits" FontSize="18" FontAttributes="Bold"/>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Original ADRIFT System:" FontSize="12" FontAttributes="Bold"/>
                        <Label Text="Campbell Wild" FontSize="12" Margin="10,0,0,0"/>

                        <Label Text="MAUI Implementation:" FontSize="12" FontAttributes="Bold" Margin="0,10,0,0"/>
                        <Label Text="Claude AI Assistant" FontSize="12" Margin="10,0,0,0"/>

                        <Label Text="Built with:" FontSize="12" FontAttributes="Bold" Margin="0,10,0,0"/>
                        <Label Text="â€¢ .NET MAUI" FontSize="12" Margin="10,0,0,0"/>
                        <Label Text="â€¢ CommunityToolkit.Mvvm" FontSize="12" Margin="10,0,0,0"/>
                        <Label Text="â€¢ Microsoft.Maui.Graphics" FontSize="12" Margin="10,0,0,0"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Links -->
            <Frame BorderColor="{StaticResource ADRIFTPrimary}" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Links" FontSize="18" FontAttributes="Bold"/>
                    <VerticalStackLayout Spacing="8">
                        <Label>
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnWebsiteTapped"/>
                            </Label.GestureRecognizers>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="ðŸŒ " FontSize="14"/>
                                    <Span Text="ADRIFT Website" FontSize="12" TextColor="{StaticResource ADRIFTPrimary}" TextDecorations="Underline"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label>
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnForumTapped"/>
                            </Label.GestureRecognizers>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="ðŸ’¬ " FontSize="14"/>
                                    <Span Text="ADRIFT Forums" FontSize="12" TextColor="{StaticResource ADRIFTPrimary}" TextDecorations="Underline"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label>
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnHelpTapped"/>
                            </Label.GestureRecognizers>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="ðŸ“– " FontSize="14"/>
                                    <Span Text="User Manual" FontSize="12" TextColor="{StaticResource ADRIFTPrimary}" TextDecorations="Underline"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- License -->
            <Frame BorderColor="{StaticResource ADRIFTPrimary}" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="License" FontSize="18" FontAttributes="Bold"/>
                    <Label FontSize="11" TextColor="{StaticResource Gray600}" LineBreakMode="WordWrap">
                        <Label.Text>
This software is provided for use with ADRIFT adventures. Refer to the ADRIFT website for complete license terms and conditions.
                        </Label.Text>
                    </Label>
                </VerticalStackLayout>
            </Frame>

            <!-- System Information -->
            <Frame BorderColor="{StaticResource ADRIFTPrimary}" Padding="15" CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="System Information" FontSize="18" FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto"
                          ColumnSpacing="10" RowSpacing="5">
                        <Label Grid.Row="0" Grid.Column="0" Text="Platform:" FontAttributes="Bold" FontSize="11"/>
                        <Label Grid.Row="0" Grid.Column="1" x:Name="PlatformLabel" FontSize="11"/>

                        <Label Grid.Row="1" Grid.Column="0" Text=".NET:" FontAttributes="Bold" FontSize="11"/>
                        <Label Grid.Row="1" Grid.Column="1" x:Name="DotNetLabel" FontSize="11"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Device:" FontAttributes="Bold" FontSize="11"/>
                        <Label Grid.Row="2" Grid.Column="1" x:Name="DeviceLabel" FontSize="11"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Close Button -->
            <Button Text="Close" Clicked="OnCloseClicked"
                    BackgroundColor="{StaticResource ADRIFTPrimary}"
                    TextColor="White" Margin="0,10,0,20"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

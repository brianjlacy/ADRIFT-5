<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADRIFT.Runner.Pages.InventoryPage"
             Title="Inventory"
             Shell.NavBarIsVisible="True">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header with Item Count -->
        <Frame Grid.Row="0" BackgroundColor="{StaticResource ADRIFTLight}"
               Padding="15" CornerRadius="0" Margin="0">
            <Grid ColumnDefinitions="*,Auto">
                <Label Grid.Column="0" x:Name="ItemCountLabel"
                       Text="You are carrying 0 items"
                       FontSize="14" FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Button Grid.Column="1" Text="â†»" FontSize="18"
                        Clicked="OnRefreshClicked"
                        BackgroundColor="Transparent"
                        WidthRequest="40" HeightRequest="40"
                        ToolTipProperties.Text="Refresh inventory"/>
            </Grid>
        </Frame>

        <!-- Items List -->
        <ScrollView Grid.Row="1" Padding="10">
            <VerticalStackLayout x:Name="ItemsContainer" Spacing="10">
                <!-- Items will be added here dynamically -->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Empty State -->
        <Frame Grid.Row="1" x:Name="EmptyFrame"
               IsVisible="True"
               BackgroundColor="Transparent"
               BorderColor="Transparent">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                <Label Text="ðŸŽ’" FontSize="48" HorizontalOptions="Center"/>
                <Label Text="Your inventory is empty"
                       FontSize="16" TextColor="{StaticResource Gray600}"
                       HorizontalOptions="Center"/>
                <Label Text="Pick up items to add them to your inventory"
                       FontSize="12" TextColor="{StaticResource Gray500}"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Footer with Actions -->
        <Frame Grid.Row="2" BackgroundColor="{StaticResource ADRIFTPrimary}"
               Padding="10" CornerRadius="0" Margin="0">
            <Grid ColumnDefinitions="*,Auto">
                <Label Grid.Column="0" x:Name="StatusLabel"
                       Text="Select an item to view actions"
                       TextColor="White" FontSize="12"
                       VerticalOptions="Center"/>
                <Button Grid.Column="1" Text="Close"
                        Clicked="OnCloseClicked"
                        BackgroundColor="White"
                        TextColor="{StaticResource ADRIFTPrimary}"
                        FontSize="12" Padding="12,6"
                        CornerRadius="4"/>
            </Grid>
        </Frame>

    </Grid>

</ContentPage>

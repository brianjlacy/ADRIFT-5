<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADRIFT.MainPage"
             Title="ADRIFT Runner">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label
            Text="ADRIFT 5 Runner"
            FontSize="32"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Label
            Text="Interactive Fiction Player"
            FontSize="18"
            HorizontalOptions="Center" />

        <Button
            x:Name="LoadAdventureBtn"
            Text="Load Adventure"
            HorizontalOptions="Center"
            Clicked="OnLoadAdventureClicked" />

    </VerticalStackLayout>

</ContentPage>

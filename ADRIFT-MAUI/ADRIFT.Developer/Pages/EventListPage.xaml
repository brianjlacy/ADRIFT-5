<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ADRIFT.ViewModels" x:Class="ADRIFT.Views.EventListPage"
             x:DataType="vm:EventListViewModel" Title="Events">
    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <Frame Grid.Row="0" BackgroundColor="{StaticResource ADRIFTPrimary}" Padding="16" Margin="0" CornerRadius="0">
            <Label Text="Events" FontSize="20" FontAttributes="Bold" TextColor="White" />
        </Frame>
        <SearchBar Grid.Row="1" Placeholder="Search events..." Text="{Binding SearchText}" Margin="16,8" />
        <CollectionView Grid.Row="2" ItemsSource="{Binding FilteredEvents}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:EventItemViewModel">
                    <Frame Margin="16,8" Padding="12">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:EventListViewModel}}, Path=EditEventCommand}" CommandParameter="{Binding}" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding Description}" FontSize="14" TextColor="Gray" />
                            <Label Text="{Binding Timing}" FontSize="12" TextColor="DarkOrange" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="3" Text="+ Add Event" Command="{Binding AddEventCommand}"
                BackgroundColor="{StaticResource ADRIFTPrimary}" Margin="16" HeightRequest="50" />
    </Grid>
</ContentPage>

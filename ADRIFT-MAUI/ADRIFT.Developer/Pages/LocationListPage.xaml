<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ADRIFT.Developer.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ADRIFT.Developer.Pages.LocationListPage"
             x:DataType="vm:LocationListViewModel"
             Title="Locations">

    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <!-- Header -->
        <Frame Grid.Row="0"
               BackgroundColor="{StaticResource ADRIFTPrimary}"
               Padding="16"
               Margin="0"
               CornerRadius="0">
            <HorizontalStackLayout Spacing="12">
                <Image Source="location.png"
                       WidthRequest="32"
                       HeightRequest="32" />
                <VerticalStackLayout Spacing="4">
                    <Label Text="Locations"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="{Binding LocationCount, StringFormat='{0} locations'}"
                           FontSize="12"
                           TextColor="White"
                           Opacity="0.9" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <!-- Search and Filter -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,Auto,Auto"
              Padding="16,8"
              ColumnSpacing="8">

            <SearchBar Grid.Column="0"
                       Placeholder="Search locations..."
                       Text="{Binding SearchText}"
                       SearchCommand="{Binding SearchCommand}" />

            <Button Grid.Column="1"
                    Text="Sort"
                    Command="{Binding SortCommand}"
                    WidthRequest="80"
                    FontSize="14" />

            <Button Grid.Column="2"
                    Text="Filter"
                    Command="{Binding FilterCommand}"
                    WidthRequest="80"
                    FontSize="14" />
        </Grid>

        <!-- Locations List -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">

            <CollectionView ItemsSource="{Binding FilteredLocations}"
                            SelectionMode="None"
                            EmptyView="No locations found">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:LocationItemViewModel">
                        <SwipeView>
                            <!-- Swipe actions -->
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="{StaticResource ADRIFTError}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:LocationListViewModel}}, Path=DeleteLocationCommand}"
                                               CommandParameter="{Binding}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <!-- Location Item -->
                            <Frame Margin="16,8"
                                   Padding="12"
                                   BackgroundColor="White"
                                   BorderColor="LightGray"
                                   CornerRadius="8">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:LocationListViewModel}}, Path=EditLocationCommand}"
                                                          CommandParameter="{Binding}" />
                                </Frame.GestureRecognizers>

                                <Grid RowDefinitions="Auto,Auto,Auto"
                                      ColumnDefinitions="*,Auto"
                                      RowSpacing="8">

                                    <!-- Location Name -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold" />

                                    <!-- Key -->
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Key}"
                                           FontSize="11"
                                           TextColor="Gray"
                                           VerticalOptions="Center" />

                                    <!-- Short Description -->
                                    <Label Grid.Row="1" Grid.ColumnSpan="2"
                                           Text="{Binding ShortDescription}"
                                           FontSize="14"
                                           TextColor="Gray"
                                           LineBreakMode="TailTruncation" />

                                    <!-- Metadata -->
                                    <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2"
                                                           Spacing="16">
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="ðŸšª"
                                                   FontSize="12" />
                                            <Label Text="{Binding ExitCount, StringFormat='{0} exits'}"
                                                   FontSize="12"
                                                   TextColor="Gray" />
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout Spacing="4"
                                                               IsVisible="{Binding IsHidden}">
                                            <Label Text="ðŸ”’"
                                                   FontSize="12" />
                                            <Label Text="Hidden"
                                                   FontSize="12"
                                                   TextColor="Gray" />
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout Spacing="4"
                                                               IsVisible="{Binding IsLibrary}">
                                            <Label Text="ðŸ“š"
                                                   FontSize="12" />
                                            <Label Text="Library"
                                                   FontSize="12"
                                                   TextColor="Gray" />
                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Add Button -->
        <Button Grid.Row="3"
                Text="+ Add New Location"
                Command="{Binding AddLocationCommand}"
                BackgroundColor="{StaticResource ADRIFTPrimary}"
                TextColor="White"
                Margin="16"
                HeightRequest="50"
                FontSize="16"
                FontAttributes="Bold" />

    </Grid>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ADRIFT.Developer.ViewModels"
             x:Class="ADRIFT.Developer.Views.TaskListPage"
             x:DataType="vm:TaskListViewModel"
             Title="Tasks">
    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <Frame Grid.Row="0" BackgroundColor="{StaticResource ADRIFTPrimary}" Padding="16" Margin="0" CornerRadius="0">
            <HorizontalStackLayout Spacing="12">
                <Image Source="task.png" WidthRequest="32" HeightRequest="32" />
                <VerticalStackLayout Spacing="4">
                    <Label Text="Tasks" FontSize="20" FontAttributes="Bold" TextColor="White" />
                    <Label Text="{Binding TaskCount, StringFormat='{0} tasks'}" FontSize="12" TextColor="White" Opacity="0.9" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Frame>
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Padding="16,8" ColumnSpacing="8">
            <SearchBar Grid.Column="0" Placeholder="Search tasks..." Text="{Binding SearchText}" />
            <Button Grid.Column="1" Text="Filter" Command="{Binding FilterCommand}" WidthRequest="80" FontSize="14" />
        </Grid>
        <RefreshView Grid.Row="2" IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding FilteredTasks}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:TaskItemViewModel">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete" BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TaskListViewModel}}, Path=DeleteTaskCommand}"
                                               CommandParameter="{Binding}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame Margin="16,8" Padding="12">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TaskListViewModel}}, Path=EditTaskCommand}"
                                                          CommandParameter="{Binding}" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="{Binding Command}" FontSize="18" FontAttributes="Bold" />
                                    <Label Text="{Binding Description}" FontSize="14" TextColor="Gray" LineBreakMode="TailTruncation" />
                                    <HorizontalStackLayout Spacing="12">
                                        <Label Text="{Binding TaskType}" FontSize="12" />
                                        <Label Text="{Binding Priority}" FontSize="12" TextColor="Orange" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        <Button Grid.Row="3" Text="+ Add New Task" Command="{Binding AddTaskCommand}"
                BackgroundColor="{StaticResource ADRIFTPrimary}" Margin="16" HeightRequest="50" FontSize="16" />
    </Grid>
</ContentPage>

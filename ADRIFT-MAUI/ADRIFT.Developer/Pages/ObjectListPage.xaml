<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ADRIFT.ViewModels"
             x:Class="ADRIFT.Views.ObjectListPage"
             x:DataType="vm:ObjectListViewModel"
             Title="Objects">

    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <Frame Grid.Row="0" BackgroundColor="{StaticResource ADRIFTPrimary}"
               Padding="16" Margin="0" CornerRadius="0">
            <HorizontalStackLayout Spacing="12">
                <Image Source="object.png" WidthRequest="32" HeightRequest="32" />
                <VerticalStackLayout Spacing="4">
                    <Label Text="Objects" FontSize="20" FontAttributes="Bold" TextColor="White" />
                    <Label Text="{Binding ObjectCount, StringFormat='{0} objects'}"
                           FontSize="12" TextColor="White" Opacity="0.9" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto"
              Padding="16,8" ColumnSpacing="8">
            <SearchBar Grid.Column="0" Placeholder="Search objects..."
                       Text="{Binding SearchText}" SearchCommand="{Binding SearchCommand}" />
            <Button Grid.Column="1" Text="Sort" Command="{Binding SortCommand}" WidthRequest="80" FontSize="14" />
            <Button Grid.Column="2" Text="Filter" Command="{Binding FilterCommand}" WidthRequest="80" FontSize="14" />
        </Grid>

        <RefreshView Grid.Row="2" IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding FilteredObjects}" SelectionMode="None" EmptyView="No objects found">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:ObjectItemViewModel">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete" BackgroundColor="{StaticResource ADRIFTError}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ObjectListViewModel}}, Path=DeleteObjectCommand}"
                                               CommandParameter="{Binding}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="16,8" Padding="12" BackgroundColor="White" BorderColor="LightGray" CornerRadius="8">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ObjectListViewModel}}, Path=EditObjectCommand}"
                                                          CommandParameter="{Binding}" />
                                </Frame.GestureRecognizers>

                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="8">
                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding FullName}"
                                           FontSize="18" FontAttributes="Bold" />
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Key}"
                                           FontSize="11" TextColor="Gray" VerticalOptions="Center" />
                                    <Label Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding Description}"
                                           FontSize="14" TextColor="Gray" LineBreakMode="TailTruncation" />

                                    <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="16">
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="ðŸ“" FontSize="12" />
                                            <Label Text="{Binding LocationName}" FontSize="12" TextColor="Gray" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="4" IsVisible="{Binding IsStatic}">
                                            <Label Text="ðŸ”’" FontSize="12" />
                                            <Label Text="Static" FontSize="12" TextColor="Gray" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="4" IsVisible="{Binding IsLibrary}">
                                            <Label Text="ðŸ“š" FontSize="12" />
                                            <Label Text="Library" FontSize="12" TextColor="Gray" />
                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Grid.Row="3" Text="+ Add New Object" Command="{Binding AddObjectCommand}"
                BackgroundColor="{StaticResource ADRIFTPrimary}" TextColor="White"
                Margin="16" HeightRequest="50" FontSize="16" FontAttributes="Bold" />
    </Grid>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADRIFT.Developer.Controls.RestrictionSummary"
             x:Name="this">

    <Frame Padding="10" BorderColor="{StaticResource Gray300}" CornerRadius="6" Margin="0,2">
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">

            <!-- Visual Indicator -->
            <Label Grid.Column="0" x:Name="IndicatorLabel" Text="âœ“" FontSize="16"
                   TextColor="Green" VerticalOptions="Center" WidthRequest="20"/>

            <!-- Restriction Text -->
            <Label Grid.Column="1" x:Name="RestrictionTextLabel"
                   Text="{Binding RestrictionText, Source={x:Reference this}}"
                   FontSize="13" VerticalOptions="Center" LineBreakMode="TailTruncation"/>

            <!-- Edit Button -->
            <Button Grid.Column="2" Text="Edit" FontSize="12"
                    Clicked="OnEditClicked"
                    Padding="8,4" VerticalOptions="Center"/>

        </Grid>
    </Frame>

</ContentView>

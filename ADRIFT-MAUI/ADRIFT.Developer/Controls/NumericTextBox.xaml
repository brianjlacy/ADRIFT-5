<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADRIFT.Developer.Controls.NumericTextBox"
             x:Name="this">

    <Border StrokeShape="RoundRectangle 4" Stroke="{StaticResource Gray300}" StrokeThickness="1">
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="0">

            <!-- Decrement Button -->
            <Button Grid.Column="0" Text="-" FontSize="18" FontAttributes="Bold"
                    Clicked="OnDecrementClicked"
                    BackgroundColor="{StaticResource Gray100}"
                    WidthRequest="40" CornerRadius="0"
                    BorderWidth="0"/>

            <!-- Numeric Entry -->
            <Entry Grid.Column="1" x:Name="NumericEntry"
                   Text="{Binding Value, Source={x:Reference this}, Mode=TwoWay}"
                   Keyboard="Numeric"
                   HorizontalTextAlignment="Center"
                   TextChanged="OnTextChanged"
                   FontSize="14"
                   Margin="0"/>

            <!-- Increment Button -->
            <Button Grid.Column="2" Text="+" FontSize="18" FontAttributes="Bold"
                    Clicked="OnIncrementClicked"
                    BackgroundColor="{StaticResource Gray100}"
                    WidthRequest="40" CornerRadius="0"
                    BorderWidth="0"/>

        </Grid>
    </Border>

</ContentView>

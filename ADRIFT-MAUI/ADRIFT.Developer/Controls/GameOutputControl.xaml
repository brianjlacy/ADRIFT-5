<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADRIFT.Developer.Controls.GameOutputControl"
             x:Name="this">

    <Border StrokeShape="RoundRectangle 4" Stroke="{StaticResource Gray300}" StrokeThickness="1">
        <ScrollView x:Name="OutputScrollView" Padding="10">
            <VerticalStackLayout x:Name="OutputContainer" Spacing="4"/>
        </ScrollView>
    </Border>

</ContentView>

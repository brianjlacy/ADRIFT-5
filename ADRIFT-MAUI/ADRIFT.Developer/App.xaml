<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ADRIFT"
             x:Class="ADRIFT.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ADRIFT Color Scheme -->
            <Color x:Key="ADRIFTPrimary">#1E88E5</Color>
            <Color x:Key="ADRIFTSecondary">#FFC107</Color>
            <Color x:Key="ADRIFTBackground">#FFFFFF</Color>
            <Color x:Key="ADRIFTSurface">#F5F5F5</Color>
            <Color x:Key="ADRIFTError">#D32F2F</Color>
            <Color x:Key="ADRIFTOnPrimary">#FFFFFF</Color>
            <Color x:Key="ADRIFTOnSecondary">#000000</Color>
            <Color x:Key="ADRIFTOnBackground">#000000</Color>
            <Color x:Key="ADRIFTOnSurface">#000000</Color>

            <!-- Typography -->
            <x:Double x:Key="TitleFontSize">24</x:Double>
            <x:Double x:Key="HeadlineFontSize">20</x:Double>
            <x:Double x:Key="SubheadFontSize">16</x:Double>
            <x:Double x:Key="BodyFontSize">14</x:Double>
            <x:Double x:Key="CaptionFontSize">12</x:Double>

            <!-- Spacing -->
            <x:Double x:Key="SpacingSmall">8</x:Double>
            <x:Double x:Key="SpacingMedium">16</x:Double>
            <x:Double x:Key="SpacingLarge">24</x:Double>

        </ResourceDictionary>
    </Application.Resources>
</Application>
